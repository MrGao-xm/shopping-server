<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.dao.UserDao">
    <select id="findAll" resultType="com.mall.entity.User">
        select * from ums_admin
    </select>

    <select id="findById" parameterType="java.lang.Integer" resultType="com.mall.entity.User">
        select* from ums_admin where id = #{id}
    </select>
    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from ums_admin where id = #{id}
    </delete>
    <insert id="add" parameterType="com.mall.entity.User">
        insert into ums_admin (id,username,password,email) values(#{id} ,#{username},#{password},#{email})
    </insert>
</mapper>
